@model ResultManagementSystem.Models.AdminViewModels.ApplicationUserViewModel

<p>
    <a asp-action="AddUser">Add New</a>
</p>
<div class="table-responsive">
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    UserName
                </th>
                <th>
                    Email
                </th>
                <th>
                    Confirmed
                </th>
                <th>
                    Phone No.
                </th>
                <th>
                    Date of Birth
                </th>
                <th>
                    Role
                </th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var admin in Model.Administrators)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => admin.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => admin.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => admin.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => admin.EmailConfirmed)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => admin.PhoneNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => admin.DOB)
                    </td>
                    <td>
                        Administrator
                    </td>
                    <td>
                        <a asp-action="EditUser" asp-route-id="@admin.Id">Edit</a>
                    </td>
                </tr>
            }

            @foreach (var manager in Model.Managers)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => manager.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => manager.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => manager.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => manager.EmailConfirmed)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => manager.PhoneNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => manager.DOB)
                    </td>
                    <td>
                        Manager
                    </td>
                    <td>
                        <a asp-action="EditUser" asp-route-id="@manager.Id">Edit</a> |
                        <a class="btn btn-link pl-0" href="#" data-toggle="modal" data-target="#Delete1">Delete</a>
                        <!-- Logout Modal-->
                        <div class="modal fade" id="Delete1" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel">Delete ?</h5>
                                        <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true"><i class="fas fa-times"></i></span>
                                        </button>
                                    </div>
                                    <div class="modal-body">  Are you want to delete @manager.UserName?</div>
                                    <div class="modal-footer">
                                        <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                                        <form asp-action="DeleteUser" asp-route-id="@manager.Id">
                                            <button type="submit" class="btn btn-danger">Detete</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
            }
            @foreach (var user in Model.Users)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => user.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => user.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => user.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => user.EmailConfirmed)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => user.PhoneNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => user.DOB)
                    </td>
                    <td>
                        User
                    </td>
                    <td>
                        <a asp-action="EditUser" asp-route-id="@user.Id">Edit</a> |
                        <a class="btn btn-link pl-0" href="#" data-toggle="modal" data-target="#Delete2">Delete</a>
                        <!-- Logout Modal-->
                        <div class="modal fade" id="Delete2" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel">Delete?</h5>
                                        <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true"><i class="fas fa-times"></i></span>
                                        </button>
                                    </div>
                                    <div class="modal-body"> Are you want to delete @user.UserName?</div>
                                    <div class="modal-footer">
                                        <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                                        <form asp-action="DeleteUser" asp-route-id="@user.Id">
                                            <button type="submit" class="btn btn-danger">Detete</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>